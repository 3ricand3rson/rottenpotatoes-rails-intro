-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th#title_header{:class => ('hilite')}=  link_to 'Movie Title', movie_sort_path()
      %th Rating
      %th#release_date_header= link_to 'Release Date', date_sort_path()
      
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        

= link_to 'Add new movie', new_movie_path
